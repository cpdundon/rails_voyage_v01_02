<!DOCTYPE html>
<html>
  <head>
    <title>Voyage via Rails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div id="jquery_hook">
			<%= yield %>
		</div>

		<% if admin? %>	
			<br></br>
			<%= link_to "Users", users_path %> | <%= link_to "Vessels", vessels_path %> | <%= link_to "Voyages", voyages_path %> 
		<% end %>
		
		<br></br>
		<%= logged_in? ? "#{hot_user.name}: " : "" %><%= link_to "Log Out", logout_path, {method: :post} %>
  </body>
</html>
